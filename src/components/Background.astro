---
import { Image } from 'astro:assets';

const { background } = Astro.props;
---
<div class="relative w-full h-full">
	<Image class="image-clip lg:opacity-100 opacity-30 min-h-screen object-cover w-full h-full overflow-hidden" src={background.image} alt={background.alt} />
	<div class="hidden lg:block absolute inset-0 bg-gradient-to-b from-transparent from-60% to-bg-100 to-100%"></div>
	<div class="lg:hidden absolute inset-0 bg-gradient-to-b from-transparent from-5% to-bg-100 to-100%"></div>
</div>

	
	<style>
		.image-clip {
			clip-path: polygon(0 0, 100% 0, 100% 100%, 10% 100%);
		}
		@media (max-width: 1025px) {
			.image-clip {
			clip-path: none;
		}
		}
	</style>